@using OnlineTicariOtomasyon.Models.Siniflar
@model List<FaturaKalem>

@{
    ViewBag.Title = "FaturaDetay";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Fatura Kalem Sayfası</h2>
<br />
<table class="table table-hover" style="margin-top:20px">
    <tr>
        <th>ID</th>
        <th>Açıklama</th>
        <th>Miktar</th>
        <th>Birim Fiyat</th>
        <th>Tutar</th>
    </tr>
    @foreach (var k in Model)
    {
        <tr>
            <td>@k.FaturaKalemID</td>
            <td>@k.Acıklama</td>
            <td>@k.Miktar</td>
            <td>@k.BirimFiyat</td>
            <td>@k.Tutar</td>
        </tr>

    }

</table>
<a href="/Fatura/YeniKalemEkle/" class="btn btn-default" style="background-color:brown">Yeni Kalem Girişi</a>